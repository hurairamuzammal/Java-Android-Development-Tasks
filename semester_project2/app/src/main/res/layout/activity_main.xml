<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- âœ… TextureView for background video -->
    <TextureView
        android:id="@+id/textureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Foreground UI on top of video -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Heading centered -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Firebase ML Kit"
            android:textSize="26sp"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginBottom="224dp" />

        <!-- Row 1: Button 1 & 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/buttonModel1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="Model 1: Image Classifier"
                android:layout_marginEnd="6dp"
                android:background="@drawable/rounded_button"
                android:textColor="@android:color/white"
                android:elevation="4dp" />

            <Button
                android:id="@+id/buttonModel2"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="Model 2: Text Recognizer"
                android:layout_marginStart="6dp"
                android:background="@drawable/rounded_button"
                android:textColor="@android:color/white"
                android:elevation="4dp" />
        </LinearLayout>

        <!-- Row 2: Button 3 & 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/buttonModel3"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="Model 3: Analysis"
                android:layout_marginEnd="6dp"
                android:background="@drawable/rounded_button"
                android:textColor="@android:color/white"
                android:elevation="4dp" />

            <Button
                android:id="@+id/buttonModel4"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="Model 4: Price Prediction"
                android:layout_marginStart="6dp"
                android:background="@drawable/rounded_button"
                android:textColor="@android:color/white"
                android:elevation="4dp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
